# Postgres (utilisé par sonarqube, airflow, etc.)
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_DB=sonar

# SonarQube
SONAR_JDBC_USERNAME=sonar
SONAR_JDBC_PASSWORD=sonar

# Keycloak
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Vault (mode dev)
VAULT_DEV_ROOT_TOKEN_ID=root

# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# Splunk
SPLUNK_PASSWORD=admin

# RabbitMQ
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=admin

# Airflow (si tu utilises le backend postgres)
AIRFLOW_UID=50000
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://admin:admin@postgres/airflow

# ────────────────────────────────────────────────
# Ressources / JVM / performance (optionnel mais utile)
# ────────────────────────────────────────────────

# Elasticsearch & Logstash / JVM heap (évite OOM sur machines limitées)
ES_JAVA_OPTS=-Xms512m -Xmx512m
LS_JAVA_OPTS=-Xms256m -Xmx256m

# Spark (si tu l'utilises beaucoup)
SPARK_DRIVER_MEMORY=2g
SPARK_EXECUTOR_MEMORY=2g

# ────────────────────────────────────────────────
# Autres variables utiles
# ────────────────────────────────────────────────

# Mode debug pour certains services
DEBUG=1

# Région par défaut pour LocalStack (AWS simulation)
AWS_DEFAULT_REGION=eu-west-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# Pour OpenTelemetry collector (si tu configures des exporters)
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318