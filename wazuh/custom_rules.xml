<group name="custom_lab_attacks,ssh,attack,">

  <!-- Brute force SSH (corrélation réelle) -->
  <rule id="100001" level="10" frequency="5" timeframe="120">
    <if_matched_sid>5716</if_matched_sid>
    <same_source_ip />
    <description>Brute force SSH détecté (+5 échecs en 2 minutes)</description>
    <mitre>T1110</mitre>
  </rule>

  <!-- Tentative d’escalade de privilèges -->
  <rule id="100002" level="12">
    <if_sid>5501</if_sid>
    <match>pam_unix.*authentication failure</match>
    <description>Tentative d’escalade de privilèges via sudo</description>
    <mitre>T1548</mitre>
  </rule>

  <!-- RDP depuis 192.168.1.0/24 -->
  <rule id="100003" level="15">
    <if_sid>18100</if_sid>
    <match>Logon Type:\s+10</match>
    <srcip>192.168.1.0/24</srcip>
    <description>Mouvement latéral suspect via RDP (192.168.1.0/24)</description>
    <mitre>
      <id>T1021</id>
    </mitre>
  </rule>

  <!-- RDP depuis 192.168.2.0/24 -->
  <rule id="100004" level="15">
    <if_sid>18100</if_sid>
    <match>Logon Type:\s+10</match>
    <srcip>192.168.2.0/24</srcip>
    <description>Mouvement latéral suspect via RDP (192.168.2.0/24)</description>
    <mitre>
      <id>T1021</id>
    </mitre>
  </rule>

</group>